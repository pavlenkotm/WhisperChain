# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

[*.{sol,vy}]
indent_style = space
indent_size = 4

[*.{py}]
indent_style = space
indent_size = 4

[*.{rs,toml}]
indent_style = space
indent_size = 4

[*.{go}]
indent_style = tab
indent_size = 4

[*.{md}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
